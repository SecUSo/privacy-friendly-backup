<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/dialog_data_export_encrypted_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backup contains %d encrypted backups"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dialog_data_export_encrypted_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_data_export_multiple_encrypted_warning"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_data_export_encrypted_information"/>

</androidx.constraintlayout.widget.ConstraintLayout>